@model OperationType

@{
    ViewData["Title"] = "Eliminar Tipo Operación";
}

<h3 class="mb-3">¿Está seguro que desea borrar el tipo de operación @Model.T_Description?</h3>

<form asp-action="DeleteOperationType">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>