@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="AppUser">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Cerrar Sesión
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="AppUser" asp-action="Register">
                Registro
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="AppUser" asp-action="Login">
                Iniciar Sesión
            </a>
        </li>

    }
</ul>