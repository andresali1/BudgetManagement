@model DealUpdateViewModel

@{
    ViewData["Title"] = "Editar Transacción";
}

<h1>Editar Transacción</h1>
<h5>
    Una transacción te permite indicar tus ingresos y gastos
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ReturnUrl" />
    <input type="hidden" asp-for="PreviousPrice" />
    <input type="hidden" asp-for="PreviousAccountId" />

    <div class="mb-3">
        <label asp-for="DealDate" class="form-label"></label>
        <input asp-for="DealDate" class="form-control" />
        <span asp-validation-for="DealDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountId" class="form-label"></label>
        <select asp-for="AccountId" asp-items="@Model.Accounts" class="form-select"></select>
        <span asp-validation-for="AccountId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OperationTypeId" class="form-label"></label>
        <select asp-for="OperationTypeId" asp-items="@Model.OperationTypes" class="form-select"></select>
        <span asp-validation-for="OperationTypeId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-select"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Actualizar</button>
    <button class="btn btn-danger" asp-action="Delete">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/DealForm.js" asp-append-version="true"></script>

    <script>
        const urlGetCategories = '@Url.Action("GetCategories")';

        $(function () {
            DealFormInitialice(urlGetCategories);
        })
    </script>
}