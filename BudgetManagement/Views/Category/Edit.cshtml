@model CategoryCreationViewModel

@{
    ViewData["Title"] = "Editar Categoría";
}

<h1>Editar categoría: @Model.C_Name</h1>
<h5>
    La categoría nos permite indicar en que gastamos nuestro dinero,
    también, de dónde provienen nuestros ingresos.
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label asp-for="C_Name" class="form-label"></label>
        <input asp-for="C_Name" class="form-control" />
        <span asp-validation-for="C_Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OperationTypeId" class="form-label"></label>
        <select asp-for="OperationTypeId" asp-items="@Model.OperationTypes" class="form-select"></select>
        <span asp-validation-for="OperationTypeId" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
